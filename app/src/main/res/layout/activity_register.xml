<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="first name"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="secand name"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="31dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="usename"
        app:layout_editor_absoluteX="40dp"
        app:layout_editor_absoluteY="200dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email accnt"
        app:layout_editor_absoluteX="230dp"
        app:layout_editor_absoluteY="200dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="password"
        app:layout_editor_absoluteY="300dp"
        app:layout_editor_absoluteX="40dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="confirm password"
        app:layout_editor_absoluteX="230dp"
        app:layout_editor_absoluteY="300dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="submit"
        app:layout_editor_absoluteY="400dp"
        app:layout_editor_absoluteX="190dp"/>

</android.support.constraint.ConstraintLayout>